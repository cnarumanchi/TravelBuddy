@model IEnumerable<TravelPartner.Data.Entities.Hotel>

<div class="container" style="height:auto; position:relative">
    @foreach (var item in Model)
    {
        <div style="margin:5px">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Images/@item.Images" />
                    <div class="caption">
                        <h3>@item.Title</h3>
                        <p>@item.Content</p>
                        <p class="col-lg-offset-5"><a href="@item.Url" class="btn btn-primary" target="_blank" role="button">Open</a> </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
