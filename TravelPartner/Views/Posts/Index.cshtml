@model IEnumerable<TravelPartner.Data.Entities.Post>
<h3>Posts</h3><button class="btn btn-primary" onclick="openWritePost()">Write a Post</button>
<div class="container" style="margin-top:40px; height:auto; position:relative">
    
    @foreach (var item in Model)
    {
        <div class="card col-sm-4" style="border-style:groove; border-radius:10px;">
            <div class="card-block">
                <h4 class="card-title">@item.Title</h4>
                <p class="card-text">@item.Body</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>From:</strong>@item.FromLocation</li>
                <li class="list-group-item">@item.FromDate</li>
            </ul>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>To:</strong>@item.ToLocation</li>
                <li class="list-group-item">@item.ToDate</li>
            </ul>
        </div>
    }
</div>
<script type="text/javascript">
    var openWritePost = function () {
        window.location.href = '@Url.Action("WritePost", "Posts")';
    }
</script>